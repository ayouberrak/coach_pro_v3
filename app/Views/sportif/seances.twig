{% extends "layouts/base.twig" %}

{% block title %}Mes Réservations - CoachPro{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto animate-fade-in pb-20">
    
    <div class="mb-10 flex flex-col md:flex-row justify-between items-end gap-6">
        <div>
            <h1 class="text-white font-black tracking-tighter uppercase" style="font-size: 2.2rem;">Mes <span class="text-primaryGold">Réservations</span></h1>
            <p class="text-gray-500 font-medium italic mt-1">Gérez vos séances et suivez votre progression.</p>
        </div>
        <div class="flex gap-3">
            <a href="/sportif/coaches" class="bg-white/5 border border-borderGray text-white px-6 py-3 rounded-2xl font-black text-[10px] uppercase tracking-widest hover:border-primaryGold transition-all">
                Nouvelle Séance
            </a>
        </div>
    </div>

    <div class="space-y-10">
        
        <section>
            <div class="flex items-center gap-4 mb-6">
                <h2 class="text-sm font-black uppercase tracking-[0.3em] text-primaryGold">Séances à venir</h2>
                <div class="h-[1px] flex-1 bg-primaryGold/20"></div>
            </div>

            <div class="grid grid-cols-1 gap-4">
                <div class="bg-darkCard border border-borderGray rounded-[2rem] p-6 hover:border-primaryGold/30 transition-all group shadow-xl">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
                        <div class="flex items-center gap-5">
                            <div class="w-16 h-16 rounded-2xl overflow-hidden border border-borderGray group-hover:border-primaryGold/50 transition-all">
                                <img src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=200&q=80" class="w-full h-full object-cover">
                            </div>
                            <div>
                                <h3 class="text-white font-black text-lg italic tracking-tight">Coach Mike Hammer</h3>
                                <p class="text-primaryGold text-[10px] font-black uppercase tracking-widest">Musculation • Prise de masse</p>
                            </div>
                        </div>

                        <div class="flex flex-col md:items-center bg-white/5 px-6 py-3 rounded-2xl border border-borderGray/50">
                            <span class="text-white font-black text-lg tracking-tighter">Aujourd'hui, 18:00</span>
                            <span class="text-gray-500 text-[9px] font-black uppercase tracking-[0.2em]">60 Minutes</span>
                        </div>

                        <div class="flex items-center gap-4 justify-between md:justify-end">
                            <span class="bg-green-500/10 text-green-500 text-[9px] font-black uppercase px-4 py-2 rounded-xl border border-green-500/20">
                                Confirmé
                            </span>
                            <button class="text-gray-500 hover:text-red-500 transition-colors">
                                <i class="fa-solid fa-calendar-xmark text-lg"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="bg-darkCard border border-borderGray rounded-[2rem] p-6 hover:border-primaryGold/30 transition-all group shadow-xl">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
                        <div class="flex items-center gap-5">
                            <div class="w-16 h-16 rounded-2xl overflow-hidden border border-borderGray group-hover:border-primaryGold/50 transition-all">
                                <img src="https://images.unsplash.com/photo-1518611012118-29a8d63e8029?w=200&q=80" class="w-full h-full object-cover">
                            </div>
                            <div>
                                <h3 class="text-white font-black text-lg italic tracking-tight">Sarah Slim</h3>
                                <p class="text-primaryGold text-[10px] font-black uppercase tracking-widest">Yoga & Mobilité</p>
                            </div>
                        </div>

                        <div class="flex flex-col md:items-center bg-white/5 px-6 py-3 rounded-2xl border border-borderGray/50">
                            <span class="text-white font-black text-lg tracking-tighter">15 Janvier, 10:00</span>
                            <span class="text-gray-500 text-[9px] font-black uppercase tracking-[0.2em]">45 Minutes</span>
                        </div>

                        <div class="flex items-center gap-4 justify-between md:justify-end">
                            <span class="bg-orange-500/10 text-orange-500 text-[9px] font-black uppercase px-4 py-2 rounded-xl border border-orange-500/20">
                                En attente
                            </span>
                            <button class="text-gray-500 hover:text-red-500 transition-colors">
                                <i class="fa-solid fa-calendar-xmark text-lg"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section>
            <div class="flex items-center gap-4 mb-6">
                <h2 class="text-sm font-black uppercase tracking-[0.3em] text-gray-600">Historique des séances</h2>
                <div class="h-[1px] flex-1 bg-borderGray/30"></div>
            </div>

            <div class="bg-darkCard border border-borderGray rounded-[2.5rem] overflow-hidden">
                <table class="w-full text-left">
                    <thead class="bg-white/5 border-b border-borderGray">
                        <tr class="text-[10px] font-black text-gray-500 uppercase tracking-widest">
                            <th class="px-8 py-5">Coach</th>
                            <th class="px-8 py-5">Date</th>
                            <th class="px-8 py-5 text-right">Statut</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-borderGray/30 text-sm">
                        <tr class="hover:bg-white/[0.02] transition-all">
                            <td class="px-8 py-5">
                                <span class="font-bold text-gray-300">Alex Burn</span>
                                <p class="text-[9px] text-gray-600 font-black uppercase">Crossfit</p>
                            </td>
                            <td class="px-8 py-5 text-gray-500 font-medium italic">05 Jan, 09:00</td>
                            <td class="px-8 py-5 text-right">
                                <span class="text-gray-600 text-[10px] font-black uppercase">Terminé</span>
                            </td>
                        </tr>
                        <tr class="hover:bg-white/[0.02] transition-all">
                            <td class="px-8 py-5">
                                <span class="font-bold text-gray-300">Coach Mike Hammer</span>
                                <p class="text-[9px] text-gray-600 font-black uppercase">Musculation</p>
                            </td>
                            <td class="px-8 py-5 text-gray-500 font-medium italic">02 Jan, 18:00</td>
                            <td class="px-8 py-5 text-right">
                                <span class="text-gray-600 text-[10px] font-black uppercase">Terminé</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>

    </div>
</div>
{% endblock %}